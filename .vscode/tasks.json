{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Convert from Markdown",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "convert-from-md",
        "--",
        "${input:markdownFile}",
        "${input:outputFormat}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "markdownFile",
      "type": "promptString",
      "description": "Enter the path to the markdown file",
      "default": "${file}"
    },
    {
      "id": "outputFormat",
      "type": "pickString",
      "description": "Choose the output format",
      "options": ["docx", "pdf"],
      "default": "docx"
    }
  ]
}
